{
    "schema_version": "2.0.0",
    "domain": "webhook_generic",
    "name": "Generic Webhook",
    "version": "1.0.0",
    "description": "Send HTTP requests to any webhook endpoint for custom integrations and automations.",
    "min_core_version": "2025.12.0",
    "logo": "https://cdn-icons-png.flaticon.com/512/1828/1828817.png",
    "documentation": "https://fanex-id.com/docs/integrations/webhook",
    "source_url": "https://github.com/faneX-ID/integrations/tree/main/webhook-generic",
    "codeowners": [
        "@faneX-Team"
    ],
    "is_system": false,
    "connection_type": "cloud",
    "capabilities": [
        "webhook",
        "automation"
    ],
    "implementations": {
        "python": "integration.py"
    },
    "requirements": [
        "requests>=2.28.0"
    ],
    "exposed_services": [
        {
            "name": "send_webhook",
            "description": "Send a webhook request",
            "schema": {
                "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "Webhook URL"
                },
                "method": {
                    "type": "string",
                    "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"],
                    "default": "POST",
                    "description": "HTTP method"
                },
                "payload": {
                    "type": "object",
                    "description": "Request payload (JSON)"
                },
                "headers": {
                    "type": "object",
                    "nullable": true,
                    "description": "Custom HTTP headers"
                }
            }
        }
    ],
    "config_schema": {
        "type": "object",
        "properties": {
            "default_url": {
                "type": "string",
                "format": "uri",
                "title": "Default Webhook URL",
                "description": "Default webhook URL (optional)"
            },
            "default_headers": {
                "type": "object",
                "title": "Default Headers",
                "description": "Default HTTP headers to include in all requests"
            },
            "timeout": {
                "type": "integer",
                "title": "Request Timeout",
                "description": "Request timeout in seconds",
                "default": 30
            }
        }
    }
}
