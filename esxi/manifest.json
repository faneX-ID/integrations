{
    "schema_version": "2.1.0",
    "domain": "esxi",
    "name": "VMware ESXi",
    "version": "1.0.0",
    "description": "Integration for managing VMware ESXi hosts and virtual machines via vSphere REST API.",
    "min_core_version": "2025.12.0",
    "is_system": false,
    "connection_type": "cloud",
    "logo": "https://raw.githubusercontent.com/vmware/vsphere-automation-sdk-python/master/docs/vmware_logo.png",
    "documentation": "https://fanex-id.com/docs/integrations/esxi",
    "source_url": "https://github.com/faneX-ID/integrations/tree/main/esxi",
    "codeowners": [
        "@faneX-Team"
    ],
    "capabilities": [
        "automation",
        "monitoring",
        "api_gateway"
    ],
    "implementations": {
        "python": "integration.py"
    },
    "requirements": [
        "requests>=2.28.0"
    ],
    "config_schema": {
        "type": "object",
        "properties": {
            "host": {
                "type": "string",
                "title": "ESXi Host",
                "description": "ESXi hostname or IP address"
            },
            "username": {
                "type": "string",
                "title": "Username",
                "description": "ESXi username"
            },
            "password": {
                "type": "string",
                "format": "password",
                "title": "Password",
                "description": "ESXi password"
            },
            "verify_ssl": {
                "type": "boolean",
                "default": false,
                "title": "Verify SSL",
                "description": "Verify SSL certificate (ESXi often uses self-signed certificates)"
            }
        },
        "required": [
            "host",
            "username",
            "password"
        ]
    },
    "exposed_services": [
        {
            "name": "list_vms",
            "description": "List all virtual machines on the ESXi host",
            "schema": {}
        },
        {
            "name": "get_vm_info",
            "description": "Get information about a specific VM",
            "schema": {
                "vm_id": {
                    "type": "string",
                    "description": "VM ID or name"
                }
            }
        },
        {
            "name": "power_on_vm",
            "description": "Power on a virtual machine",
            "schema": {
                "vm_id": {
                    "type": "string",
                    "description": "VM ID or name"
                }
            }
        },
        {
            "name": "power_off_vm",
            "description": "Power off a virtual machine",
            "schema": {
                "vm_id": {
                    "type": "string",
                    "description": "VM ID or name"
                }
            }
        },
        {
            "name": "restart_vm",
            "description": "Restart a virtual machine",
            "schema": {
                "vm_id": {
                    "type": "string",
                    "description": "VM ID or name"
                }
            }
        },
        {
            "name": "get_vm_power_state",
            "description": "Get the power state of a VM",
            "schema": {
                "vm_id": {
                    "type": "string",
                    "description": "VM ID or name"
                }
            }
        },
        {
            "name": "test_connection",
            "description": "Test connection to ESXi host",
            "schema": {}
        }
    ]
}

