        "implementation_info": {
            "python": {
                "file_extension": ".py",
                "language": "Python",
                "recommended_for": "All platforms, standard HTTP library"
            },
            "powershell": {
                "file_extension": ".ps1",
                "language": "PowerShell",
                "recommended_for": "Windows and cross-platform PowerShell"
            }
        }
    },
    "codeowners": [
        "@faneX-Team"
    ],
    "is_system": false,
    "connection_type": "cloud",
    "capabilities": [
        "webhook",
        "automation"
    ],
    "implementations": {
        "python": {
            "file": "integration.py",
            "default": true,
            "requirements": [
                "requests>=2.28.0"
            ],
            "description": "Python implementation using requests library. Recommended for all platforms."
        },
        "powershell": {
            "file": "integration.ps1",
            "default": false,
            "requirements": [],
            "description": "PowerShell implementation using Invoke-WebRequest. Works on Windows and cross-platform PowerShell."
        }
    },
    "default_implementation": "python",
    "exposed_services": [
        {
            "name": "send_webhook",
            "description": "Send a webhook request",
            "schema": {
                "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "Webhook URL"
                },
                "method": {
                    "type": "string",
                    "enum": [
                        "GET",
                        "POST",
                        "PUT",
                        "PATCH",
                        "DELETE"
                    ],
                    "default": "POST",
                    "description": "HTTP method"
                },
                "payload": {
                    "type": "object",
                    "description": "Request payload (JSON)"
                },
                "headers": {
                    "type": "object",
                    "nullable": true,
                    "description": "Custom HTTP headers"
                }
            }
        }
    ],
    "config_schema": {
        "type": "object",
        "properties": {
            "default_url": {
                "type": "string",
                "format": "uri",
                "title": "Default Webhook URL",
                "description": "Default webhook URL (optional)"
            },
            "default_headers": {
                "type": "object",
                "title": "Default Headers",
                "description": "Default HTTP headers to include in all requests"
            },
            "timeout": {
                "type": "integer",
                "title": "Request Timeout",
                "description": "Request timeout in seconds",
                "default": 30
            }
        }
    }
}