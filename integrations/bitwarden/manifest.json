{
    "schema_version": "2.0.0",
    "domain": "bitwarden",
    "name": "Bitwarden",
    "version": "1.0.0",
    "description": "Integration with Bitwarden password manager API for managing organizations, members, collections, and groups.",
    "min_core_version": "2025.12.0",
    "logo": "https://bitwarden.com/images/logo-icon.png",
    "documentation": "https://fanex-id.com/docs/integrations/bitwarden",
    "source_url": "https://github.com/faneX-ID/integrations/tree/main/bitwarden",
    "codeowners": [
        "@faneX-Team"
    ],
    "is_system": false,
    "connection_type": "cloud",
    "capabilities": [
        "password_management",
        "secrets_management"
    ],
    "implementations": {
        "python": "integration.py"
    },
    "requirements": [
        "requests>=2.28.0"
    ],
    "exposed_services": [
        {
            "name": "get_organization",
            "description": "Get organization information",
            "schema": {
                "organization_id": {
                    "type": "string"
                }
            }
        },
        {
            "name": "create_member",
            "description": "Create an organization member",
            "schema": {
                "organization_id": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "collections": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "nullable": true
                }
            }
        },
        {
            "name": "get_members",
            "description": "Get organization members",
            "schema": {
                "organization_id": {
                    "type": "string"
                }
            }
        },
        {
            "name": "create_collection",
            "description": "Create a collection",
            "schema": {
                "organization_id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        {
            "name": "get_collections",
            "description": "Get organization collections",
            "schema": {
                "organization_id": {
                    "type": "string"
                }
            }
        }
    ],
    "config_schema": {
        "type": "object",
        "properties": {
            "api_url": {
                "type": "string",
                "format": "uri",
                "title": "API URL",
                "description": "Bitwarden API URL (default: https://api.bitwarden.com)",
                "default": "https://api.bitwarden.com"
            },
            "client_id": {
                "type": "string",
                "title": "Client ID",
                "description": "Bitwarden API client ID"
            },
            "client_secret": {
                "type": "string",
                "format": "password",
                "title": "Client Secret",
                "description": "Bitwarden API client secret"
            },
            "default_organization_id": {
                "type": "string",
                "title": "Default Organization ID",
                "description": "Default organization ID"
            }
        },
        "required": [
            "client_id",
            "client_secret"
        ]
    }
}


