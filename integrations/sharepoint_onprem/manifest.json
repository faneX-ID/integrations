{
    "schema_version": "2.0.0",
    "domain": "sharepoint_onprem",
    "name": "SharePoint On-Premises",
    "version": "1.0.1",
    "description": "Integration with SharePoint On-Premises via REST API and CSOM (Client-Side Object Model).",
    "min_core_version": "2025.12.0",
    "is_system": true,
    "connection_type": "internal",
    "capabilities": [
        "document_management",
        "collaboration",
        "permissions"
    ],
    "implementations": {
        "python": {
            "file": "integration.py",
            "default": false,
            "requirements": [
                "requests>=2.28.0",
                "requests-ntlm>=1.2.0"
            ],
            "description": "Python implementation using REST API and NTLM authentication. Limited functionality compared to PowerShell."
        },
        "powershell": {
            "file": "integration.ps1",
            "default": true,
            "requirements": [
                "SharePointPnPPowerShellOnline",
                "Import-Module SharePointPnPPowerShellOnline"
            ],
            "description": "PowerShell implementation using SharePoint PnP. Recommended for full SharePoint feature support including CSOM."
        }
    },
    "default_implementation": "powershell",
    "source_url": "https://github.com/faneX-ID/core/tree/main/backend/app/system_integrations/sharepoint_onprem",
    "ui_metadata": {
        "implementation_badge": {
            "python": {
                "label": "Python",
                "color": "3776ab",
                "icon": "üêç"
            },
            "powershell": {
                "label": "PowerShell",
                "color": "012456",
                "icon": "üíª"
            }
        },
        "implementation_info": {
            "python": {
                "file_extension": ".py",
                "language": "Python",
                "recommended_for": "Basic REST API operations"
            },
            "powershell": {
                "file_extension": ".ps1",
                "language": "PowerShell",
                "recommended_for": "Full SharePoint features, CSOM support"
            }
        }
    },
    "exposed_services": [
        {
            "name": "get_site",
            "description": "Get SharePoint site information",
            "schema": {
                "site_url": {
                    "type": "string",
                    "format": "uri"
                }
            }
        },
        {
            "name": "get_list",
            "description": "Get SharePoint list",
            "schema": {
                "site_url": {
                    "type": "string",
                    "format": "uri"
                },
                "list_name": {
                    "type": "string"
                }
            }
        },
        {
            "name": "create_list_item",
            "description": "Create a list item",
            "schema": {
                "site_url": {
                    "type": "string",
                    "format": "uri"
                },
                "list_name": {
                    "type": "string"
                },
                "fields": {
                    "type": "object"
                }
            }
        },
        {
            "name": "upload_file",
            "description": "Upload a file to SharePoint",
            "schema": {
                "site_url": {
                    "type": "string",
                    "format": "uri"
                },
                "library_name": {
                    "type": "string"
                },
                "file_path": {
                    "type": "string"
                },
                "file_content": {
                    "type": "string",
                    "format": "binary"
                }
            }
        },
        {
            "name": "set_permissions",
            "description": "Set permissions on a SharePoint item",
            "schema": {
                "site_url": {
                    "type": "string",
                    "format": "uri"
                },
                "item_path": {
                    "type": "string"
                },
                "user": {
                    "type": "string"
                },
                "permission_level": {
                    "type": "string",
                    "enum": [
                        "Read",
                        "Contribute",
                        "Edit",
                        "FullControl"
                    ]
                }
            }
        }
    ],
    "config_schema": {
        "type": "object",
        "properties": {
            "server_url": {
                "type": "string",
                "format": "uri",
                "title": "SharePoint Server URL",
                "description": "Base URL of SharePoint server"
            },
            "username": {
                "type": "string",
                "title": "Username",
                "description": "SharePoint username (domain\\username)"
            },
            "password": {
                "type": "string",
                "format": "password",
                "title": "Password",
                "description": "SharePoint password"
            },
            "default_site": {
                "type": "string",
                "format": "uri",
                "title": "Default Site",
                "description": "Default SharePoint site URL"
            }
        },
        "required": [
            "server_url",
            "username",
            "password"
        ]
    }
}