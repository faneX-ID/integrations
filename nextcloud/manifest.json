{
    "schema_version": "2.0.0",
    "domain": "nextcloud",
    "name": "Nextcloud",
    "version": "1.0.0",
    "description": "Integration with Nextcloud file sharing and collaboration platform via WebDAV and REST API.",
    "min_core_version": "2025.12.0",
    "logo": "https://nextcloud.com/favicon.ico",
    "documentation": "https://fanex-id.com/docs/integrations/nextcloud",
    "source_url": "https://github.com/faneX-ID/integrations/tree/main/nextcloud",
    "codeowners": [
        "@faneX-Team"
    ],
    "is_system": false,
    "connection_type": "cloud",
    "capabilities": [
        "file_sharing",
        "collaboration"
    ],
    "implementations": {
        "python": "integration.py"
    },
    "requirements": [
        "requests>=2.28.0"
    ],
    "exposed_services": [
        {
            "name": "upload_file",
            "description": "Upload a file to Nextcloud",
            "schema": {
                "remote_path": {
                    "type": "string"
                },
                "file_content": {
                    "type": "string",
                    "format": "binary"
                }
            }
        },
        {
            "name": "create_share",
            "description": "Create a file share",
            "schema": {
                "path": {
                    "type": "string"
                },
                "share_type": {
                    "type": "integer",
                    "enum": [0, 1, 3],
                    "description": "0 = user, 1 = group, 3 = public link"
                },
                "permissions": {
                    "type": "integer",
                    "default": 1
                }
            }
        },
        {
            "name": "get_user",
            "description": "Get user information",
            "schema": {
                "user_id": {
                    "type": "string"
                }
            }
        }
    ],
    "config_schema": {
        "type": "object",
        "properties": {
            "server_url": {
                "type": "string",
                "format": "uri",
                "title": "Nextcloud Server URL",
                "description": "Base URL of your Nextcloud instance"
            },
            "username": {
                "type": "string",
                "title": "Username",
                "description": "Nextcloud username"
            },
            "password": {
                "type": "string",
                "format": "password",
                "title": "Password",
                "description": "Nextcloud password or app password"
            }
        },
        "required": [
            "server_url",
            "username",
            "password"
        ]
    }
}

